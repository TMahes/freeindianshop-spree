<% content_for :head do %>
  <% if hotproducts.respond_to?(:total_pages) %>
    <%= rel_next_prev_link_tags hotproducts %>
  <% end %>
<% end %>

<div data-hook="products_search_results_heading">
  <% if hotproducts.empty? %>
    <div data-hook="products_search_results_heading_no_results_found">
      <%= Spree.t(:no_products_found) %>
    </div>
  <% elsif params.key?(:keywords) %>
    <div data-hook="products_search_results_heading_results_found">
      <h6 class="search-results-title"><%= Spree.t(:search_results, keywords: h(params[:keywords])) %></h6>
    </div>
  <% end %>
</div>

<% if hotproducts.any? %>
  <div id="products" class="product-list" data-hook>
    <% hotproducts.each do |hotproduct| %>
      <% url = spree.product_path(hotproduct, taxon_id: @taxon.try(:id)) %>
      <div id="product_<%= hotproduct.id %>" data-hook="products_list_item" class="product-list-item" itemscope itemtype="https://schema.org/Product">
        <% cache(@taxon.present? ? [I18n.locale, current_currency, @taxon, hotproduct] : cache_key_for_product(hotproduct)) do %>
            <%= link_to url, itemprop: "url" do %>
              <div class="product_image_area">
                <%= product_image(hotproduct, itemprop: "image", class: "img-responsive center-block") %>
              </div>
              <%= content_tag(:div, truncate(hotproduct.name, length: 50), class: 'info product_name', itemprop: "name", title: hotproduct.name) %>
            <% end %>
            <div itemprop="offers" itemscope itemtype="https://schema.org/Offer">
              <div class="price selling" itemprop="price"><%= hotproduct.variants.first ? display_price(hotproduct.variants.first) : display_price(hotproduct) %></div>
            </div>
        <% end %>
      </div>
    <% end %>
    <% reset_cycle("classes") %>
  </div>
<% end %>


