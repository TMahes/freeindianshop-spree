<style>
.third-level-menu
{
    position: absolute;
    top: 0;
    right: -150px;
    width: 150px;
    list-style: none;
    padding: 0;
    margin: 0;
    display: none;
}
.fourth-level-menu
{
    position: absolute;
    top: 0;
    right: -150px;
    width: 150px;
    list-style: none;
    padding: 0;
    margin: 0;
    display: none;
}
.third-level-menu > li
{
    height: 30px;
background-color: #333;
}
.fourth-level-menu > li
{
    height: 30px;
background-color: #333;
}
.third-level-menu > li:hover { background: #CCCCCC; }
.fourth-level-menu > li:hover { background: #CCCCCC; }

.second-level-menu
{
    position: absolute;
    top: 30px;
    left: 0;
    width: 150px;
    list-style: none;
    padding: 0;
    margin: 0;
    display: none;
    background-color: #333;
}

.second-level-menu > li
{
    position: relative;
    height: 30px;
    z-index: 1;
    background-color: #333;
}
.second-level-menu > li:hover { background: #CCCCCC; }

.top-level-menu
{
    list-style: none;
    padding: 0;
    margin: 0;
}

.top-level-menu > li
{
    position: relative;
    float: left;
    height: 30px;
    width: 100px;
}
.top-level-menu > li:hover { background: #CCCCCC; }

.top-level-menu li:hover > ul
{
    /* On hover, display the next level's menu */
    display: inline;
}

.second-level-menu li:hover > ul
{
    /* On hover, display the next level's menu */
    display: inline;
}

/* Menu Link Styles */

.top-level-menu a /* Apply to all links inside the multi-level menu */
{

    text-decoration: none;
    padding: 0 0 0 10px;
    color: white;
    /* Make the link cover the entire list item-container */
    display: block;
    line-height: 30px;
}
.top-level-menu a:hover { color: #000000; }
.main-menu {
    background-color: #333;
    font-family: Arial, Helvetica, sans-serif;
    width: 100%;
    padding: 10px;
}
</style>
  <%= render partial: 'spree/shared/search' %>
  <nav id="top-nav-bar" class="user_bar">
    <a href="javascript:void(0);" class="close_this userbar_toggle"></a>
    <ul id="nav-bar" class="nav navbar1-nav" data-hook>
      <li id="link-to-cart" data-hook>
        <noscript>
          <%= link_to_cart %>
        </noscript>
      </li>
      <script>Spree.fetch_cart()</script>
      <li id="search-bar" data-hook>
      </li>
    </ul>
  </nav>
  <% if @taxonomies.present? %>
<div class="main-menu">
    <% max_level = Spree::Config[:max_level_in_taxons_menu] || 1 %>
    <ul class="top-level-menu"> 
        <% @taxonomies.each do |taxonomy| %>
          <% cache [I18n.locale, taxonomy, max_level, @taxon] do %>
            <% if taxonomy.root.children.any? && taxonomy.name != 'Brands' %>
                <%= taxons_menu_tree(taxonomy.root, @taxon, max_level) %>
            <% end %>
          <% end %>
        <% end %>  
        </ul>  
</div>
<% end %>
  </div>
